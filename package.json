{
  "name": "ept-assignment-photo-gallery",
  "author": {
    "name": "Peter Banjo"
  },
  "description": "Full-stack JavaScript app on AWS",
  "engines": {
    "node": ">=18"
  },
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:db\" \"npm run start:api\" \"npm run start:app\"",
    "start:db": "docker compose -f docker-compose.yml up --build --force-recreate dynamodb_admin",
    "start:up": "docker compose -f docker-compose.yml up --build --force-recreate",
    "down": "docker compose down -v",
    "start:api": "npm run start --workspace=ept-gallery-api",
    "start:app": "npm run start --workspace=ept-gallery-app",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "gts lint",
    "clean": "gts clean",
    "fix": "gts fix",
    "posttest": "npm run lint"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "jest": "27.5.1",
    "jest-config": "27.5.1",
    "jest-environment-node": "27.5.1",
    "gts": "^3.1.1",
    "typescript": "~4.7.0",
    "@types/node": "^14.11.2"
  }
}
